<div class="ward-result">

  {% if result %}
    <div class="ward-result__result">
      <div class="ward-result__result-header">
        <h2>{{ "Result"|t }}</h2>
      </div>
      <div class="ward-result__result-content">
        {{ result }}
      </div>
    </div>
  {% endif %}

  {% if chart %}
    <div class="ward-result__chart">
      <div class="ward-result__chart-header">
        <h2>{{ "Votes cast"|t }}</h2>
      </div>
      {{ chart }}
    </div>
  {% endif %}

  {% if analysis %}
    <div class="ward-result__analysis">
      <div class="ward-result__analysis-header">
        <h2>{{ "Analysis"|t }}</h2>
      </div>
      {{ analysis }}
    </div>
  {% endif %}

</div>